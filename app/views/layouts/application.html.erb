<!DOCTYPE html>
<html>
  <head>
    <title>CookbookClient</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <p><a href="/client/recipes">Home Page</a></p>
    <% flash.each do |name, message| %>
      <h1><%= message %></h1>
    <% end %>
    <a href="/signup">Sign Up</a>
    <a href="/client/login">Log In</a>
    <a href="/client/logout" data-method="delete">Log Out</a>
    <%= yield %>
  </body>
</html>
